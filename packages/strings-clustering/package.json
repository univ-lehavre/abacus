{
  "name": "@univ-lehavre/strings-clustering",
  "version": "1.0.0",
  "description": "Regroupement de chaînes de caractères par similarité",
  "author": "Pierre-Olivier Chasset",
  "license": "UNLICENSED",
  "scripts": {
    "build": "preconstruct build",
    "dev": "preconstruct watch",
    "clean": "rm -fR dist",
    "types:check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,js}\" --max-warnings=0",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "test": "jest",
    "start": "run-s build start:only",
    "start:only": "node ./dist/index.js",
    "demo": "pnpm -s tsx demo/index.ts",
    "publish:only": "npm publish --access public",
    "publish:check": "npm pack --dry-run",
    "publish": "run-s build publish:only"
  },
  "devDependencies": {
    "@univ-lehavre/typescript-config": "workspace:^"
  },
  "dependencies": {
    "@univ-lehavre/ts-matrix": "workspace:^",
    "effect": "^3.17.13"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "main": "dist/univ-lehavre-strings-clustering.cjs.js",
  "module": "dist/univ-lehavre-strings-clustering.esm.js",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/univ-lehavre-strings-clustering.cjs.mjs",
        "default": "./dist/univ-lehavre-strings-clustering.cjs.js"
      },
      "module": "./dist/univ-lehavre-strings-clustering.esm.js",
      "import": "./dist/univ-lehavre-strings-clustering.cjs.mjs",
      "default": "./dist/univ-lehavre-strings-clustering.cjs.js"
    },
    "./package.json": "./package.json"
  },
  "babel": {
    "targets": {
      "node": "22.19"
    },
    "presets": [
      "@babel/preset-env"
    ],
    "overrides": [
      {
        "test": "**/*.ts",
        "presets": [
          "@babel/preset-typescript"
        ]
      }
    ]
  }
}
