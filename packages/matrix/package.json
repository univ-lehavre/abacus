{
  "name": "@univ-lehavre/matrix",
  "version": "1.0.0",
  "description": "Une classe pour le calcul matriciel en TypeScript",
  "author": "Pierre-Olivier Chasset",
  "license": "UNLICENSED",
  "scripts": {
    "build": "preconstruct build",
    "dev": "preconstruct watch",
    "clean": "rm -fR dist",
    "types:check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "lint": "eslint \"src/**/*.{ts,js}\" --max-warnings=0",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "test": "jest",
    "start": "run-s build start:only",
    "start:only": "node ./dist/index.js",
    "demo": "pnpm -s tsx demo/index.ts",
    "bench": "pnpm -s tsx demo/bench.ts",
    "docs": "typedoc"
  },
  "devDependencies": {
    "@univ-lehavre/typescript-config": "workspace:^",
    "typedoc": "^0.27.6"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "main": "dist/univ-lehavre-matrix.cjs.js",
  "module": "dist/univ-lehavre-matrix.esm.js",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/univ-lehavre-matrix.cjs.mjs",
        "default": "./dist/univ-lehavre-matrix.cjs.js"
      },
      "module": "./dist/univ-lehavre-matrix.esm.js",
      "import": "./dist/univ-lehavre-matrix.cjs.mjs",
      "default": "./dist/univ-lehavre-matrix.cjs.js"
    },
    "./package.json": "./package.json"
  },
  "babel": {
    "targets": {
      "node": "22.19"
    },
    "presets": [
      "@babel/preset-env"
    ],
    "overrides": [
      {
        "test": "**/*.ts",
        "presets": [
          "@babel/preset-typescript"
        ]
      }
    ]
  }
}
